.zone-user-wrapper {
	background: #f6f6f6;
}

.logo-img { margin: 0; }
.logo-img img {
	width: 100%;
	margin-top: 10px;
}

#block-menu-menu-help-action-menu .content  {
	margin: 0;
	border-right: 1px solid #ddd;
}

.zone-user-wrapper ul.menu li {
	list-style: none;
	display: block;
	float: left;
	margin: 0;
	padding: 0;
	height: 100%;
}

.zone-user-wrapper .menu a {
	display: block;
	line-height: 10em;
	padding: 0 40px;
	border-left: 1px solid #ddd;
	font-weight: normal;
	font-size: 1em;
	color: #000;
}

.zone-user-wrapper .menu a:hover,
.zone-user-wrapper .menu a:focus {
	background: rgb(130, 75, 147);
	color: white;
}
.zone-user-wrapper .menu .first a:hover,
.zone-user-wrapper .menu .first a:focus {
  background-color:rgb(80, 145, 205);
}
.zone-user-wrapper .menu .last a:hover,
.zone-user-wrapper .menu .last a:focus {
  background-color:rgb(185, 185, 185);
}
#block-menu-menu-help-action-menu {
	float: left;
}
#block-boxes-upper-help-box {
	float: right;
	width: 20%;
	margin: 0 2%;
	text-align: center;
}
	#block-boxes-upper-help-box h2 {
		color: #000;
		margin: 0;
		font-size: 1.3em;
	}
	#block-boxes-upper-help-box h5 {
		margin: .65em 0 .1em;
		color: #8F8F8F;
		font-size: .9em;
		font-weight: normal;
		letter-spacing: .01em;
		line-height: .95em;
		text-transform: none;
	}
    #block-boxes-upper-help-box .button {
      margin: .75em auto;
      padding: .6em 3em;
      text-transform: uppercase;
      font-weight: bold;
    }
#zone-menu-wrapper ul.menu li a {
  padding: .5em 1em;
  color: #fff;
  display: block;
  border-bottom: 0 solid;
  border-right: 1px solid rgba(255, 255, 255, .3);
 }